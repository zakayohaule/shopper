@model Shopper.Mvc.ViewModels.ProductFormModel
@{
    var attributes = ViewData["Attributes"] as List<SelectListItem>;
    var groups = ViewData["Groups"] as List<SelectListItem>;
}

<div class="form-group col-12">
    <th:input hidden asp-for="Id" value="@Model.Id"></th:input>
    <th:label asp-for="ProductGroupId">Product Group</th:label>
    <th:select class="form-control select2bs4" asp-for="ProductGroupId" asp-items="groups">
        <option value="">-- Select Product Group --</option>
    </th:select>
    <th:span asp-validation-for="ProductGroupId" class="text-danger"></th:span>
</div>

<div class="form-group col-12">
    <th:label asp-for="ProductCategoryId">Product Category</th:label>
    <th:select class="form-control select2bs4" asp-for="ProductCategoryId" disabled>
        <option value="">-- Select Product Group First --</option>
    </th:select>
    <th:span asp-validation-for="ProductCategoryId" class="text-danger"></th:span>
</div>

<div class="form-group col-12">
    <th:label asp-for="ProductTypeId">Product Type</th:label>
    <th:select class="form-control select2bs4" asp-for="ProductTypeId" disabled>
        <option value="">-- Select Product Category First --</option>
    </th:select>
    <th:span asp-validation-for="ProductTypeId" class="text-danger"></th:span>
</div>

<div class="form-group col-12">
    <th:label asp-for="Name"></th:label>
    <th:input asp-for="Name" class="form-control"></th:input>
    <th:span asp-validation-for="Name" class="text-danger"></th:span>
</div>
<div class="form-group col-12">
    <th:label asp-for="Attributes">Product Attributes</th:label>
    <th:select class="form-control select2bs4" multiple="multiple" data-placeholder="-- Select product attributes --" asp-for="Attributes" asp-items="attributes">
    </th:select>
    <th:span asp-validation-for="Attributes" class="text-danger"></th:span>
</div>
<div class="form-group col-12">
    <div class="icheck-primary">
        <th:input asp-for="HasExpirationDate"></th:input>
        <th:label asp-for="HasExpirationDate" >Has Expiration Date?</th:label>
    </div>
</div>
<div class="form-group">
    <th:label asp-for="Image">Product Image</th:label>
    <div class="input-group">
        <div class="custom-file">
            <th:input class="custom-file-input" id="exampleInputFile" asp-for="Image"></th:input>
            <label class="custom-file-label" for="exampleInputFile">Choose file</label>
        </div>
    </div>
</div>
<div class="form-group col-12 text-right">
    <button type="submit" class="btn btn-primary" name="button">Submit</button>
</div>
