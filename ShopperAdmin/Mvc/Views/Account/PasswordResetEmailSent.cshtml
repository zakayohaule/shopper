@{
    Layout = "_Layout ";
}

<div class="text-center">
    <th:img src="~\files\assets\images\logo.png" alt="logo.png"/>
</div>
<div class="auth-box card">
    <div class="card-block">
        <div class="row m-b-20">
            <div class="col-md-12">
                <h3 class="text-center">Password Reset Email Sent</h3>
            </div>
        </div>

        <br>
        <p>
            An email with the password reset link has been sent to your account. Please check your email!.
        </p>
        <p>
            <th:a asp-action="Login">Click here to log in</th:a>
        </p>
        <hr>
    </div>
</div>