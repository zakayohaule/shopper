@model List<UserViewModel>;

@{
    var newUser = new UserViewModel();
    ViewData["Modal-Title"] = "Edit User";
}

@section css {
    <!-- Toastr -->
    <th:link rel="stylesheet" href="~/plugins/toastr/toastr.min.css"></th:link>
}

<div class="card">
    <div class="card-header">
        <a href="" data-toggle="modal" data-target="#add-user" class="btn text-primary float-right" title="Add User">
            <i class="fas fa-user-plus fa-lg"></i>
        </a>
    </div>
    <!-- /.card-header -->

    <div class="modal fade" id="add-user">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add User</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <th:form class="" asp-controller="User" asp-action="Create" method="post">
                    <div class="modal-body">
                        <th:partial name="_UserForm" model="newUser"/>
                    </div>
                </th:form>
            </div>
        </div>
    </div>

    <div class="card-body table-responsive p-0">
        <table class="table table-hover text-nowrap">
            <thead>
            <tr>
                <th style="width: 10px">#</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Roles</th>
                <th style="width: 160px"></th>
            </tr>
            </thead>
            <tbody>
            @{
                int index = 0;
            }
            @foreach (var user in Model)
            {
                index++;
                <tr>
                    <td>@index</td>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>
                        <ul>
                            @foreach (var role in user.Roles)
                            {
                                <li>@role.Name</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <a href="#">
                            <span class="badge badge-dark" data-toggle="tooltip" title="Assign roles" onclick="openFormModal('@Url.Action("UserRolesModal", new {id = user.Id})', 'Assign Roles')">
                                <i class="fas fa-users"></i>
                            </span>
                        </a>
                        <a href="#" onclick="openFormModal('@Url.Action("EditUserModal", new {id = user.Id})', 'Edit User')">
                            <span class="badge badge-warning" title="Edit user">
                                <i class="fas fa-edit"></i>
                            </span>
                        </a>
                        <th:a asp-controller="User"
                              asp-action="Delete"
                              asp-route-id="@user.Id" class="btn-delete">
                            <span class="badge badge-danger" title="Delete user">
                                <i class="fas fa-trash"></i>
                            </span>
                        </th:a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
<th:partial name="Partials/_DynamicModelPopup" model="Model" view-data="ViewData" ></th:partial>

@section scripts
{
    <script>
            useSubmitClass();
            useDeleteConfirmation();
    </script>
    <th:partial name="_ValidationScriptsPartial"></th:partial>
    <th:partial name="Partials/_ToastScript"></th:partial>
}
