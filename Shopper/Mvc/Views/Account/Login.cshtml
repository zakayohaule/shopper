@using Microsoft.AspNetCore.Mvc.Localization
@model LoginModel;
@inject IViewLocalizer Localizer;
@{
    Layout = "_Layout ";
    var emailVerified = TempData["EmailVerification"] as string;
}
<th:partial name="_EmailVerificationMessage" model="emailVerified"></th:partial>

<p class="login-box-msg">@Localizer["Login"]</p>

<th:form asp-controller="Account" asp-action="Login" asp-route-returnTo="@ViewContext.HttpContext.Request.Query["return_to"]" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="input-group mb-3">
        <th:input asp-for="Email" type="email" class="form-control" placeholder="Email"></th:input>
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-envelope"></span>
            </div>
        </div>
    </div>
    <th:span asp-validation-for="Email" class="text-danger"></th:span>
    <div class="input-group mb-3">
        <th:input asp-for="Password" type="password" minLength="6" class="form-control" placeholder="Password"></th:input>
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-lock"></span>
            </div>
        </div>
    </div>
    <th:span asp-validation-for="Password" class="text-danger"></th:span>
    <div class="row">
        <div class="col-8">
            <div class="icheck-primary">
                <input type="checkbox" id="remember">
                <label for="remember">
                    Remember Me
                </label>
            </div>
        </div>
        <!-- /.col -->
        <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
        </div>
        <!-- /.col -->
    </div>
</th:form>

<p class="mb-1">
    <th:a asp-controller="Account" asp-action="ForgotPassword">Forgot password?</th:a>
</p>
