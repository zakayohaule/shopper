@using Shared.Extensions.Helpers
@model UserViewModel;

@{
    var institutionSelectItems = ViewData["InstitutionSelectItems"] as List<SelectListItem>;
}

<div class="form-group col-12">
    <th:label asp-for="FullName"></th:label>
    <th:input asp-for="FullName" class="form-control"></th:input>
    <th:span asp-validation-for="FullName" class="text-danger"></th:span>
</div>

<div class="form-group col-12">
    <th:label asp-for="Email"></th:label>
    <th:input asp-for="Email" class="form-control" disabled="@Model.Email.IsNotNull()"></th:input>
    <th:span asp-validation-for="Email" class="text-danger"></th:span>
</div>


<div class="form-group col-12 text-right">
    <button type="submit" class="btn btn-primary" name="button">Submit</button>
</div>