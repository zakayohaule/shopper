@using Attribute = Shared.Mvc.Entities.Attribute
@model List<Shared.Mvc.Entities.Attribute>;

@{
    Layout = "_Layout";
    var newAttribute = new Attribute();
}

@section css {
    <!-- Toastr -->
    <th:link rel="stylesheet" href="~/plugins/toastr/toastr.min.css"></th:link>
}

<div class="card with-border">
    <div class="card-header">
        <a href="" data-toggle="modal" data-target="#add-attribute" class="btn btn-sm btn-primary float-right" title="Add Attribute">
            <i class="fas fa-user-plus"> Add</i>
        </a>
    </div>
    <!-- /.card-header -->

    <div class="modal fade" id="add-attribute">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add Attribute</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <th:form class="" asp-controller="Attribute" asp-action="Create" method="post">
                    <div class="modal-body">
                        <th:partial name="_AttributeForm" model="newAttribute"/>
                    </div>
                </th:form>
            </div>
        </div>
    </div>

    <div class="card-body table-responsive p-0">
        <table class="table table-sm table-bordered table-hover">
            <thead>
            <tr>
                <th style="width: 10px">#</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            @{
                int index = 0;
            }
            @foreach (var att in Model)
            {
                index++;
                <tr>
                    <td>@index</td>
                    <td>@att.Name</td>
                    <td>
                        @*<th:a asp-controller="Role" asp-action="RolePermissions" asp-route-id="@role.Id" title="Role permissions" class="btn btn-sm btn-default">
                            <i class="fa fa-list-ul"></i>
                        </th:a>*@
                        <a href="#" onclick="openFormModal('@Url.Action("EditAttributeModal", new {id = att.Id})', 'Edit Attribute')"
                           class="btn btn-default btn-sm" title="Edit attribute">
                            @* <span class="badge badge-warning" title="Edit attribute"> *@
                            <i class="fas fa-edit"></i>
                            @* </span> *@
                        </a>
                        <th:a asp-controller="Attribute"
                              asp-action="Delete"
                              asp-route-id="@att.Id" class="btn btn-default btn-sm btn-delete" title="Delete attribute">
                            @* <span class="badge badge-danger" title="Delete attribute"> *@
                            <i class="fas fa-trash"></i>
                            @* </span> *@
                        </th:a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
<th:partial name="Partials/_DynamicModelPopup" model="Model" view-data="ViewData"></th:partial>

@section scripts
{
    <th:partial name="_ValidationScriptsPartial"></th:partial>
    <th:partial name="Partials/_ToastScript"></th:partial>
    <script>
                // useSubmitClass();
                useDeleteConfirmation();
        </script>
}
