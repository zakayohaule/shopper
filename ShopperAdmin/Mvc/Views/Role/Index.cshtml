@using Shared.Mvc.Entities
@model List<Role>;

@{
    Layout = "_Layout";
    var newRole = new Role();
}

<!-- Page-header start -->
<div class="page-header mt-0 mb-2">
    <div class="row ">
        <div class="col-lg-8 pl-0">
            <div class="page-header-title col-12">
                <div class="d-inline">
                    <h4>Roles</h4>
                </div>
            </div>
        </div>
        <div class="col-lg-4 text-right">
            <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#modal-1">
                <i class="zmdi zmdi-account-add"></i>
                Add Role
            </a>
        </div>

        <div class="modal" id="modal-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="col-12 mt-3">
                        <h5>
                            <b>New Role</b>
                        </h5>
                        <hr>
                    </div>
                    <th:form class="" asp-controller="Role" asp-action="Create">
                        <th:partial name="_RoleForm" model="newRole"/>
                    </th:form>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- Page-header end -->

<!-- Page-body start -->
<div class="page-body">
    <!-- DOM/Jquery table start -->
    <div class="card">
        <div class="card-block">
            <div class="table-responsive">
                <table class="table table-hover  nowrap">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.DisplayName</td>
                            <td>
                                <div class="d-flex justify-content-center">
                                    <th:a asp-controller="Role" asp-action="RolePermissions" asp-route-id="@role.Id" class="mx-2" title="Role Permissions">
                                        <h5>
                                            <i class="zmdi zmdi-format-list-bulleted"></i>
                                        </h5>
                                    </th:a>
                                    <a href="" class="mx-2" data-toggle="modal" data-target="#modal-@role.Id">
                                        <h5>
                                            <i class="zmdi zmdi-edit"></i>
                                        </h5>
                                    </a>
                                    <th:a
                                        asp-controller="Role"
                                        asp-action="Delete"
                                        asp-route-id="@role.Id"
                                        class="mx-2 text-danger" onclick="return confirm('Are you sure you want to delete this role?')">
                                        <h5>
                                            <i class="zmdi zmdi-delete"></i>
                                        </h5>
                                    </th:a>
                                </div>
                            </td>
                        </tr>
                        <div class="modal" id="modal-@role.Id">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="col-12 mt-3">
                                        <h5>
                                            <b>EDIT ROLE</b>
                                        </h5>
                                        <hr>
                                    </div>
                                    <th:form class="" asp-controller="Role" asp-action="Update" asp-route-id="@role.Id" method="post">
                                        <th:partial name="_RoleForm" model="role"/>
                                    </th:form>
                                </div>
                            </div>
                        </div>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Page-body start -->

@section scripts
{
    <th:partial name="_ValidationScriptsPartial"></th:partial>
}