@model Shared.Mvc.ViewModels.ForgotPasswordModel
@{
    Layout = "_Layout ";
}

<p class="login-box-msg">Enter your email. A password reset link will be sent to your email!</p>

<th:form asp-controller="Account" asp-action="ForgotPassword" method="post">
    <div class="input-group mb-3">
        <th:input asp-for="Email" type="email" class="form-control" placeholder="Email"></th:input>
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-envelope"></span>
            </div>
        </div>
        <th:span asp-validation-for="Email" class="text-danger"></th:span>
    </div>
    <div class="row">
        <div class="col-12">
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </div>
        <!-- /.col -->
    </div>
</th:form>

<p class="mt-3 mb-1">
    <th:a asp-controller="Account" asp-action="Login">Back to login</th:a>
</p>

