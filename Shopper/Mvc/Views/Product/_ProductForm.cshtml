@model Product
@{
    var attributes = ViewData["Attributes"] as List<SelectListItem>;
    var categories = ViewData["Categories"] as List<SelectListItem>;
    var select2Class = ViewBag.EditMode != null ? "select2bs4-modal" : "select2bs4";
}

<div class="form-group col-12">
    <th>Product Category</th>
    <th:input asp-for="Id" value="@Model.Id" hidden></th:input>
    <th:select class="form-control @select2Class" asp-for="ProductCategoryId" asp-items="categories">
        <option value="">-- Select Product Category --</option>
    </th:select>
    <th:span asp-validation-for="ProductCategoryId" class="text-danger"></th:span>
</div>

<div class="form-group col-12">
    <th:label asp-for="Name"></th:label>
    <th:input asp-for="Name" class="form-control"></th:input>
    <th:span asp-validation-for="Name" class="text-danger"></th:span>
</div>
<div class="form-group col-12">
    <th>Product Attributes</th>
    <th:select class="form-control @select2Class" multiple="multiple" data-placeholder="-- Select product attributes --" asp-for="Attributes" asp-items="attributes">
    </th:select>
    <th:span asp-validation-for="Attributes" class="text-danger"></th:span>
</div>

<div class="form-group col-12 text-right">
    <button type="submit" class="btn btn-primary" name="button">Submit</button>
</div>
