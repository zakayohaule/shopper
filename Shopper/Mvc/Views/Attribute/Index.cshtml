@using Attribute = Shopper.Mvc.Entities.Attribute
@model List<Shopper.Mvc.Entities.Attribute>;

@{
    Layout = "_Layout";
    var newAttribute = new Attribute();
    ViewData["FormName"] = "_AttributeForm";
}

@section css {
    <!-- Toastr -->
    <th:link rel="stylesheet" href="~/plugins/toastr/toastr.min.css"></th:link>
}

<div class="card with-border">
    <div class="card-header">
        <th:permission name="attribute_add">
            <a href="" data-toggle="modal" data-target="#add-attribute" class="btn btn-sm btn-primary float-right" title="Add Attribute">
                Add Attribute
            </a>


            <div class="modal fade" id="add-attribute">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Add Attribute</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <th:form class="" asp-controller="Attribute" asp-action="Create" method="post">
                            <div class="modal-body">
                                <th:partial name="_AttributeForm" model="newAttribute"/>
                            </div>
                        </th:form>
                    </div>
                </div>
            </div>
        </th:permission>
    </div>
    <!-- /.card-header -->

    <div class="card-body table-responsive p-3">
        <table class="table table-sm table-hover">
            <thead>
            <tr>
                <th style="width: 10px">#</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            @{
                int index = 0;
            }
            @if (Model.Count() > 0)
            {
                foreach (var att in Model)
                {
                    index++;
                    <tr>
                        <td>@index</td>
                        <td>@att.Name</td>
                        <td>
                            <th:permission name="attribute_option_view">
                                <th:a asp-controller="AttributeOption" asp-action="Index" asp-route-attributeId="@att.Id" title="Attribute Options" class="btn btn-sm btn-default">
                                    <i class="fa fa-list-ul"></i>
                                </th:a>
                            </th:permission>
                            <th:permission name="attribute_view">
                                <a href="#" onclick="openEditModal('@Url.Action("EditAttributeModal", new {id = att.Id})',
                         '@Url.Action("Update", new {id = att.Id})',
                         'Edit Attribute')"
                                   class="btn btn-default btn-sm" title="Edit attribute">
                                    @* <span class="badge badge-warning" title="Edit attribute"> *@
                                    <i class="fas fa-edit"></i>
                                    @* </span> *@
                                </a>
                            </th:permission>
                            <th:permission name="attribute_delete">
                                <th:a asp-controller="Attribute"
                                      asp-action="Delete"
                                      asp-route-id="@att.Id" class="btn btn-default btn-sm btn-delete" title="Delete attribute">
                                    @* <span class="badge badge-danger" title="Delete attribute"> *@
                                    <i class="fas fa-trash"></i>
                                    @* </span> *@
                                </th:a>
                            </th:permission>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">No records found</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
<th:permission name="attribute_edit">
    <th:partial name="Partials/_EditModal" model="newAttribute" view-data="ViewData"/>
</th:permission>

@section scripts
{

    <th:partial name="_ValidationScriptsPartial"></th:partial>
    <th:partial name="Partials/_ToastScript"></th:partial>
    <th:script src="~/js/edit-form.js"></th:script>
    <script>
                // useSubmitClass();
                useDeleteConfirmation();
        </script>
}
