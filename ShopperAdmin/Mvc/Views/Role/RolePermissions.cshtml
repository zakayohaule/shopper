@model RolePermissionViewModel

@section css
{
    <!-- iCheck for checkboxes and radio inputs -->
    <th:link rel="stylesheet" href="~/plugins/icheck-bootstrap/icheck-bootstrap.min.css"></th:link>
}

<!-- Page-body start -->
<div class="card">
    <div class="card-header">
        <h3 class="card-title">@Model.RoleName - Permissions</h3>
    </div>
    <div class="card-body">

        <th:form asp-controller="Role" asp-action="SaveRolePermissions" asp-route-id="@Model.RoleId">
            <div class="row">
                <!-- Minimal style -->
                @foreach (var module in Model.Modules)
                {
                    <div class="col-sm-12 col-md-4">
                        <div class="card with-border">
                            <div class="card-header">
                                <h5>@module.Name</h5>
                            </div>
                            <div class="card-body">
                                <!-- checkbox -->
                                @foreach (var permission in module.Permissions)
                                {
                                    var isChecked = "";
                                    var hasPermission = Model.RoleClaims.Contains(permission.Name);
                                    if (hasPermission)
                                    {
                                        isChecked = "checked";
                                    }

                                    <div class="icheck-primary">
                                        <input type="checkbox" name="permissions" value="@permission.Name" id="permission_@permission.Id" @isChecked>
                                        <label for="permission_@permission.Id">
                                            @permission.DisplayName
                                        </label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="form-group col-3 pull-right">
                <button type="submit" class="btn btn-primary" name="button">Submit</button>
            </div>
        </th:form>
    </div>
</div>
<!-- Page-body start -->
