@model List<PriceType>;

@{
    Layout = "_Layout";
    var newPriceType = new PriceType();
    ViewData["FormName"] = "_PriceTypeForm";
}

@section css {
    <!-- Toastr -->
    <th:link rel="stylesheet" href="~/plugins/toastr/toastr.min.css"></th:link>
}

<div class="card with-border">
    <div class="card-header">
        <th:permission name="price_type_add">
            <a href="" data-toggle="modal" data-target="#add-price-type" class="btn btn-sm btn-primary float-right" title="Add User">
               Add Type
            </a>

            <div class="modal fade" id="add-price-type">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Add Price Type</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <th:form class="" asp-controller="PriceType" asp-action="Create" method="post">
                            <div class="modal-body">
                                <th:partial name="_PriceTypeForm" model="newPriceType"/>
                            </div>
                        </th:form>
                    </div>
                </div>
            </div>
        </th:permission>
    </div>
    <!-- /.card-header -->

    <div class="card-body table-responsive p-3">
        <table class="table table-sm table-hover">
            <thead>
            <tr>
                <th style="width: 10px">#</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            @{
                int index = 0;
            }
            @foreach (var priceType in Model)
            {
                index++;
                <tr>
                    <td>@index</td>
                    <td>@priceType.Name</td>
                    <td>
                        <th:permission name="price_type_edit">

                            <a href="#" onclick="openEditModal('@Url.Action("EditPriceTypeModal", new {id = priceType.Id})',
                         '@Url.Action("Update", new {id = priceType.Id})',
                         'Edit Price Type')"
                               class="btn btn-default btn-sm"
                               title="Edit price type">
                                @* <span class="badge badge-warning" title="Edit price type"> *@
                                <i class="fas fa-edit"></i>
                                @* </span> *@
                            </a>
                        </th:permission>
                        <th:permission name="price_type_delete">
                            <th:a asp-controller="PriceType"
                                  asp-action="Delete"
                                  asp-route-id="@priceType.Id" class="btn btn-default btn-sm btn-delete" title="Delete price type">
                                @* <span class="badge badge-danger" title="Delete price type"> *@
                                <i class="fas fa-trash"></i>
                                @* </span> *@
                            </th:a>
                        </th:permission>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->

<th:permission name="price_type_edit">
    <th:partial name="Partials/_EditModal" model="newPriceType" view-data="ViewData"/>
</th:permission>

@section scripts
{

    <th:partial name="_ValidationScriptsPartial"></th:partial>
    <th:partial name="Partials/_ToastScript"></th:partial>
    <th:script src="~/js/edit-form.js"></th:script>
    <script>
                // useSubmitClass();
                useDeleteConfirmation();
        </script>
}
