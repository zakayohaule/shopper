@model ResetPasswordModel;
@{
    Layout = "_Layout ";
}

<th:form class="md-float-material form-material" asp-controller="Account" asp-action="ResetForgottenPassword" method="post">
    <div class="text-center">
        <th:img src="~\files\assets\images\logo.png" alt="logo.png"/>
    </div>
    <div class="auth-box card">
        <div class="card-block">
            <div class="row m-b-20">
                <div class="col-md-12">
                    <h3 class="text-center">Reset Password</h3>
                </div>
            </div>

            <th:partial name="_ModelValidationSummary"></th:partial>

            <br>
            <div class="form-group form-primary">
                <th:label asp-for="NewPassword"></th:label>
                <th:input asp-for="NewPassword" class="form-control" placeholder="New Password"></th:input>
                <th:span asp-validation-for="NewPassword" class="text-danger"></th:span>
            </div>
            <div class="form-group form-primary">
                <th:label asp-for="ConfirmPassword"></th:label>
                <th:input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password"></th:input>
                <th:span asp-validation-for="ConfirmPassword" class="text-danger"></th:span>
            </div>
            <th:input type="hidden" asp-for="Email" class="form-control"></th:input>
            <th:input type="hidden" asp-for="Token" class="form-control"></th:input>
            <div class="row m-t-30">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary btn-md btn-block waves-effect waves-light text-center m-b-20">Reset Password</button>
                </div>
            </div>
            <div class="row m-t-25 text-left">
                <div class="col-12">
                    <div class="forgot-phone text-right f-right">
                        <th:a asp-controller="Account" asp-action="Login" class="text-right f-w-600"> Back to login</th:a>
                    </div>
                </div>
            </div>
            <hr>
        </div>
    </div>
</th:form>