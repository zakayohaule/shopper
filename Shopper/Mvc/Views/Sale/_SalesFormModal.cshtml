@model Shopper.Mvc.ViewModels.SaleFormViewModel;

<th:form class="form-horizontal" asp-action="AddToCart" asp-controller="Sale">
    <div class="form-group row">
        <th:select class="form-control select2bs4" id="skus" asp-for="SkuId"
                   asp-items="@Model.Skus">
            <option value="">-- Select Product --</option>
        </th:select>
    </div>
    <div class="form-group row">
        <th:label asp-for="Price" class="col-sm-4 col-form-label"></th:label>
        <div class="col-sm-8">
            <th:input asp-for="Price" type="text" id="price" class="form-control profit" onkeyup="formatNumber(event)"></th:input>
        </div>
    </div>
    <div class="form-group row">
        <th:label asp-for="Quantity" class="col-sm-4 col-form-label"></th:label>
        <div class="col-sm-8">
            <th:input asp-for="Quantity" type="number" id="quantity" class="form-control profit"></th:input>
            <th:span asp-validation-for="Quantity" class="text-danger"></th:span>
        </div>
    </div>
    <div class="card-footer">
        <button type="submit" class="btn btn-info float-right">Submit</button>
    </div>
    <!-- /.card-footer -->
</th:form>

<th:partial name="_ValidationScriptsPartial"></th:partial>
