    <div class="card-body">
        <table class="table table-borderless col-md-12" id="sales">
            <thead>
            <tr>
                <th style="width:40%"></th>
                <th style="width:10%"></th>
                <th style="width:30%"></th>
                <th style="width:20%"></th>
            </tr>
            </thead>

            <tbody>
            <tr id="row_1">
                <td>
                    <th:select class="form-control select2bs4" name="products" id="products" asp-items="productSelectItems">
                        <option value="">-- Select Product --</option>
                    </th:select>
                </td>
                <td>
                    <input type="text" placeholder="Qty" class="form-control" name="quantity" id="quantity">
                </td>
                <td>
                    <input type="text" placeholder="Price" class="form-control" name="price" id="price">
                </td>
                <td>
                    <button type="button" class="btn btn-primary" id="add-to-cart">
                        <i class="fa fa-cart-arrow-down"></i> Add To Cart
                    </button>
                </td>
            </tr>
            </tbody>
        </table>

        <table class="table table-sm table-bordered table-hover dt-table">
            <thead>
            <tr>
                <th style="width: 10px">#</th>
                <th>Name</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Amount</th>
            </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
<th:partial name="Partials/_DynamicModalPopup" model="Model" view-data="ViewData"></th:partial>

@section scripts
{
    <th:partial name="Partials/_DtJs"></th:partial>
    <!-- Select2 -->
    <th:script src="~/plugins/select2/js/select2.full.min.js"></th:script>

    <!-- Number formatter -->
    <th:script src="~/js/number-formatter.js"></th:script>

    <script >
    //Initialize Select2 Elements
        $('.select2').select2()

        //Initialize Select2 Elements
        $('.select2bs4').select2({
          theme: 'bootstrap4'
        })
    </script>
    <th:partial name="_ValidationScriptsPartial"></th:partial>
    <th:partial name="Partials/_ToastScript"></th:partial>
    <script>
                // useSubmitClass();
                useDeleteConfirmation();

