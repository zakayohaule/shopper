@model RolePermissionViewModel

<!-- Page-header start -->
<div class="page-header mt-0 mb-2">
    <div class="row ">
        <div class="col-lg-8 pl-0">
            <div class="page-header-title col-12">
                <div class="d-inline">
                    <h4>@Model.RoleName Role Permissions</h4>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- Page-header end -->

<!-- Page-body start -->
<div class="page-body">
    <!-- DOM/Jquery table start -->
    <div class="card">
        <div class="card-block">
            <div class="col-lg-12 col-xl-12">
                <div class="row">
                    <!-- Nav tabs -->

                    <ul class="nav nav-tabs md-tabs tabs-left b-none col-md-3" role="tablist">
                        @{ var i = 1; }
                        @foreach (var module in Model.Modules)
                        {
                            var active = "";
                            @if (i == 1)
                            {
                                active = "active";
                            }
                            <li class="nav-item text-left">
                                <a class="nav-link ml-3 @active" data-toggle="tab" href="#module-@i"
                                   role="tab">
                                    @module.Name
                                </a>
                                <div class="slide"></div>
                            </li>
@*                             <hr> *@
                            i++;
                        }
                    </ul>

                    <th:form asp-controller="Role" asp-action="SaveRolePermissions" asp-route-id="@Model.RoleId" class="col-md-9">
                        <!-- Tab panes -->
                        <div class="tab-content tabs-left-content col-md-9 card-block">
                            @{ var j = 1; }
                            @foreach (var module in Model.Modules)
                            {
                                var active = "";
                                @if (j == 1)
                                {
                                    active = "active";
                                }
                                <div class="tab-pane @active" id="module-@j" role="tabpanel">
                                    <div class="row">
                                        @foreach (var permission in module.Permissions)
                                        {
                                            var isChecked = "";
                                            var hasPermission = Model.RoleClaims.Contains(permission.Name);
                                            if (hasPermission)
                                            {
                                                isChecked = "checked";
                                            }
                                            <div class="form-group col-md-4">
                                                <input type="checkbox" @isChecked name="permissions"
                                                       value="@permission.Name"> @permission.DisplayName
                                            </div>
                                        }
                                    </div>
                                </div>
                                j++;
                            }
                        </div>

                        <div class="form-group col-3 pull-right">
                            <button type="submit" class="btn btn-primary" name="button">Submit</button>
                        </div>
                    </th:form>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- Page-body start -->