@* @model List<Product>; *@

@{
    Layout = "_Layout";
    var today = DateTime.Now;
    var productSelectItems = ViewData["Products"] as List<SelectListItem>;
}

@section css {
    <th:partial name="Partials/_DtCss"></th:partial>
    <th:link rel="stylesheet" href="~/plugins/select2/css/select2.min.css"></th:link>
    <th:link rel="stylesheet" href="~/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css"></th:link>
    <!-- Toastr -->
    <th:link rel="stylesheet" href="~/plugins/toastr/toastr.min.css"></th:link>
}

<div class="card with-border">
    <div class="card-header border-0">
        <div class="d-flex justify-content-between">
            <h3 class="card-title">Manage Stock</h3>
            <span class="pull pull-right" style="font-weight: bolder">@today.ToLongDateString()</span>
        </div>
    </div>
    <!-- /.card-header -->

